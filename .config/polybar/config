[colors]
background = #303030
background-active = #82aaff
transparent = #00000000
foreground = #82aaff
foreground-active = #303030
primary = #82aaff
secondary = #e60053
alert = #f07178

[bar/main]
width = 100%
height = 20
radius = 0
fixed-center = true

monitor = ${env:MONITOR:}

background = ${colors.background}
;background = ${colors.transparent}
foreground = #fff

;underline-size = 5
;underline-color = ${colors.transparent}

separator = " "
;separator-padding = 1

;border-bottom-size = 2 
;border-bottom-color = #ff0000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Inconsolata NF:style=Regular:pixelsize=12;1
font-1 = Inconsolata NF:style=Regular:pixelsize=16;2

modules-left = powermenu i3 filesystem
modules-center = xwindow
modules-right = pulseaudio memory cpu battery updates date

tray-position = right
tray-padding = 2

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-padding = 1
;label-background = ${colors.background}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = %mountpoint%: %percentage_used%%
label-mounted-padding = 1
label-mounted-background = ${colors.background-active}
label-mounted-foreground = ${colors.foreground-active}

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.alarm}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-active}
label-focused-foreground = ${colors.foreground-active}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${colors.foreground-active}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU"
format-prefix-padding = 1
format-prefix-foreground = ${colors.foreground-active}
format-prefix-background = ${colors.background-active}

label = %percentage:2%%
label-padding = 1
label-background = ${colors.background-active}
label-foreground = ${colors.foreground-active}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM"
format-prefix-padding = 1
format-prefix-background = ${colors.background-active}
format-prefix-foreground = ${colors.foreground-active}

label = %percentage_used%%
label-padding = 1
label-background = ${colors.background-active}
label-foreground = ${colors.foreground-active}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d.%m.%Y"

time = %H:%M
time-alt = 

format-prefix = "CLK"
format-prefix-padding = 1
format-prefix-background = ${colors.background-active}
format-prefix-foreground = ${colors.foreground-active}

label = %date%%time%
label-padding = 1
label-background = ${colors.background-active}
label-foreground = ${colors.foreground-active}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume ="VOL %percentage%%"
label-volume-padding = 1
label-volume-foreground = ${colors.foreground-active}
label-volume-background = ${colors.background-active}

label-muted = muted
label-muted-padding = 1
label-muted-foreground = #666
label-muted-background = ${colors.alert}

[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 60

format = <ramp> <label>
format-background = ${colors.background-active}
format-foreground = ${colors.foreground-active}
format-padding = 1

format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-foreground = ${colors.foreground-active}

ramp-0 = LW
ramp-1 = MD
ramp-2 = HI
ramp-foreground = ${colors.foreground-active}

[module/powermenu]
type = custom/menu

expand-right = true

;format-padding = 1
format-background = ${colors.background}

label-open = "⭘"
label-open-padding = 1
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.background}

label-close = ""
label-close-padding = 1
label-close-foreground = ${colors.foreground}

;label-separator = |
;label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = ""
menu-0-0-padding = 1
menu-0-0-exec = menu-open-1

menu-0-1 = ""
menu-0-1-padding = 1
menu-0-1-exec = menu-open-2

menu-1-0 = ""
menu-1-0-padding = 1
menu-1-0-exec = reboot

menu-2-0 = ""
menu-2-0-padding = 1
menu-2-0-exec = shutdown

[module/updates]
type = custom/script
label = %output%
format-prefix = "UPD"
format-prefix-padding = 1
format-prefix-background = ${colors.background-active}
format-prefix-foreground = ${colors.foreground-active}

label-padding = 1
label-background = ${colors.background-active}
label-foreground = ${colors.foreground-active}

exec = checkupdates | wc -l
tail = true
interval = 90

; Set environment variables in the 'exec' script (unreleased) 
; env-NAME = VALUE
; env-FOO = BAR

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

